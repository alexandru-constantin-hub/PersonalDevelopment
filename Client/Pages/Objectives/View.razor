@page "/objectives/view/{id:int}"
@using Microsoft.AspNetCore.Authorization
@inject HttpClient _client
@inject IJSRuntime js
@attribute [Authorize]

<h3>Objective</h3>

@if (objective == null)
{
    <div class="alert alert-info" role="alert">
        Loading values...
    </div>
} else
{
    <table>
        <tr>
            <th>Name</th>
        </tr>
        
        
            <tr>
                <td>@objective.Name</td>
                <td>@objective.Description</td>
                <td>@objective.CompletedProcentage</td>
                <td>@objective.Status</td>
                <td>
                    <a href="/objectives/view/@objective.Id" class="btn btn-primary">Detail</a>
                    <a href="/objectives/edit/@objective.Id" class="btn btn-primary">Edit</a>
                    <button class="btn btn-danger" @onclick="(()=>Delete())"></button>
                </td>
            </tr>
            
        
    </table>
}

@code {
    [Parameter] public int id { get; set; }
    Objective objective = new Objective();

    protected async override Task OnParametersSetAsync()
    {
        objective = await _client.GetFromJsonAsync<Objective>("/api/objectives/" + id);
    }

    async Task Delete()
    {
        
        var confirm = await js.InvokeAsync<bool>("confirm", "Do you want to delete " + objective.Name);
        if (confirm)
        {
            await _client.DeleteAsync("/api/objetives/" + objective.Id);
            await OnInitializedAsync();
        }
        
    }

    
}
