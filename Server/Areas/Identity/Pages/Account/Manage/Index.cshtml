@page
@model IndexModel
@{
    ViewData["ActivePage"] = ManageNavPages.Index;
}


<partial name="_StatusMessage" for="StatusMessage" />
<div class="row justify-content-center mt-4 mb-4 pt-4 pb-4">
    <div class="col-sm-12 col-md-6">
        <div class="card card-login">
            <div class="card-body">
                <h4>Profile</h4>
                <h6 class="text-black-50 mb-3">Here you can change your information</h6>
                <form id="profile-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Username" class="form-control" disabled />
                        <label asp-for="Username" class="form-label"></label>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.PhoneNumber" class="form-control" />
                        <label asp-for="Input.PhoneNumber" class="form-label"></label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-end">
                         <button id="update-profile-button mt-3" type="submit" class="btn btn-primary ps-4 pe-4">Save</button>
                    </div>
                   
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
